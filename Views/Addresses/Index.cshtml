@model IEnumerable<TrashCollector3.Models.Address>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Addresses</h2>

<p>
    <a href="/Addresses/Create" class="btn btn-default">Add an Address</a>
</p>


    @if (Model == null)
    {
        <div class="row">
            <div class="jumbotron2">
                <h2>You haven't added an address!</h2>
                <p class="lead">Click "Create New" to schedule a pickup.</p>
            </div>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AddressID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AddressID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AddressID })
                    </td>
                </tr>
            }
        </table>
    }

        
